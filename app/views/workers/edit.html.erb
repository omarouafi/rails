<div class="container">
  <h1>Edit Worker</h1>

  <%= form_with(model: @worker, url: worker_path(@worker), method: :patch, class: "form") do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :status %>
      <%= form.text_field :status, class: "form-control" %>
    </div>

    <%= form.submit "Update Worker", class: "btn btn-primary" %>
  <% end %>
</div>
