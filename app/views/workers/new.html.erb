<div class="container">
  <h1>New Worker</h1>

  <%= form_with(model: @worker, url: workers_path, class: "form") do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group mb-4">
      <%= form.label :status %>
      <%= form.text_field :status, class: "form-control" %>
    </div>
    
    <%= form.submit "Create Worker", class: "btn btn-primary" %>
  
  <% end %>
</div>
