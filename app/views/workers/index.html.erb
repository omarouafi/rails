<div class="container">
  <h1>Workers</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @workers.each do |worker| %>
        <tr>
          <td><%= worker.name %></td>
          <td><%= worker.status %></td>
          <td>
            <%= link_to 'Show', worker_path(worker), class: "btn btn-primary" %>
          

          <%= link_to 'Edit', edit_worker_path(worker), class: "btn btn-primary" %>
          
            <a href="/workers/<%= worker.id %>/delete" class="btn btn-danger" 
             data-method="delete">Delete</a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Worker', new_worker_path, class: "btn btn-success" %>
</div>
